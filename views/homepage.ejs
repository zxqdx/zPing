<div id="header">
    <span id="url">zPing</span>
    <span id="desc"><%= __('Header Desc') %></span>
    <div id="ann"><%- __('Header Ann') %></div>
    <div class="clearfix"></div>
</div>
<div id="mainer">
    <div id="mainerStat">
        <div id="basicStat">
            <div id="currPing">
                <span class="desc"><%= __('Current') %></span>
                <span class="number">----</span>
            </div>
            <div id="currPingAvg">
                <span class="desc"><%= __('Average') %></span>
                <span class="number">----</span>
            </div>
            <div class="clearfix"></div>
        </div>
        <div id="overallStat">
            <div id="lagRate" class="rate">
                <div class="number">-<span class="percent">%</span></div>
                <div class="desc"><%= __('Rate Lag') %></div>
                <canvas></canvas>
            </div>
            <div id="lossRate" class="rate">
                <div class="number">-<span class="percent">%</span></div>
                <div class="desc"><%= __('Rate Loss') %></div>
                <canvas></canvas>
            </div>
        </div>
        <div id="hourlyStat">
            <div class="title">
                <%= __('Hourly Stat') %> <span class="tag up">--% -</span>
            </div>
            <div class="block top">
                <div class="blockUnit" id="hourlyCount">
                    <div class="number">----</div>
                    <div class="desc"><%= __('Count Requests') %></div>
                </div>
                <div class="blockUnit" id="hourlyLoss">
                    <div class="number">----</div>
                    <div class="desc"><%= __('Count Losses') %></div>
                </div>
            </div>
            <div class="block bottom">
                <div class="blockUnit" id="hourlyLow">
                    <div class="number">----</div>
                    <div class="desc"><%= __('Lowest') %></div>
                </div>
                <div class="blockUnit" id="hourlyAvg">
                    <div class="number">----</div>
                    <div class="desc"><%= __('Average') %></div>
                </div>
                <div class="blockUnit" id="hourlyHigh">
                    <div class="number">----</div>
                    <div class="desc"><%= __('Highest') %></div>
                </div>
            </div>
        </div>
    </div>
    <div id="mainerChart">
        <div id="eachPingChart">
            <canvas id="eachPing"></canvas>
        </div>
        <div id="intPingChart">
            <canvas id="intPing"></canvas>
        </div>
        <div id="intPingChartAfter"></div>
    </div>
</div>
<div id="utility">
    <!--<div><%= __('Coming Soon') %></div>-->
</div>
